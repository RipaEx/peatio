<div class="alert alert-success">
  <div class="row">
    <div class="field col-12 text-center">
      <i class="far fa-check-circle fa-5x"></i>
      <br/><br/>
      <h3 class="wrap"><%= t('private.settings.edit_profile.confirm.success') %></h3>
      <br/><br/><br/>
      <p>
        <%= t('private.settings.edit_profile.confirm.go_next') %>
      </p>
      <br/><br/><br/>
    </div>
  </div>
  <div class="row d-flex justify-content-between mt-4">  
    <div class="col-2"></div>
    <div class="col-3">
      <%= submit_tag t('private.settings.edit_profile.confirm.back_button'), class: 'btn btn-secondary text-white btn-block', id: 'form_back_success' %>
    </div>
    <div class="col-2"></div>
    <div class="col-3 text-right">
      <%= submit_tag t('private.settings.edit_profile.confirm.submit_button'), class: 'btn btn-success btn-block', id: 'form_submit_success'%>
    </div>
    <div class="col-2"></div>
  </div>
</div>
