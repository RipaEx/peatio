<div class="container">
  <% if content_for?(:before) %>
    <%= yield(:before) %>
  <% end %>
  <div class="card card-default">
    <div class="card-header">
      <h2 class="card-title text-center"><%= guide_panel_title %></h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-1"></div>
        <div id="content_process" class="col-10">
          <%= render 'shared/flash' %>
          <%= yield %>
        </div>
        <div class="col-1"></div>
      </div>
      <% if content_for?(:secondary) %>
        <%= yield(:secondary) %>
      <% end %>
    </div>
  </div>
  <% if content_for?(:after) %>
    <%= yield(:after) %>
  <% end %>
</div>
